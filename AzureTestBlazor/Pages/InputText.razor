@page "/inputText"

@inject AzureTestBlazor.Shared.ViewText viewText

<h3>InputText</h3>

<form method="post" action="/ViewText">
    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input @bind="title" type="text" id="title" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="content" class="col-sm-2 col-form-label">Content</label>
        <div class="col-sm-10">
            <textarea @bind="content" id="content" rows="30" class="form-control"></textarea>
        </div>
    </div>

    <input type="submit" value="Send" />
    @*<button @onclick="ButtonClick">Send</button>*@

</form>

<button @onclick="ButtonClick">Go to View</button>

@code {

    [Inject]
    protected NavigationManager NavManager { get; set; }

    private string title = string.Empty;
    private string content = string.Empty;

    protected void ButtonClick()
    {
        viewText.Title = title;
        viewText.Content = content;
        NavManager.NavigateTo("ViewText");
    }

}
